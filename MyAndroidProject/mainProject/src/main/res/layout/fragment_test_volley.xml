<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mainproject.TestVolleyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_testvolley_get"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Volley get request" />

        <Button
            android:id="@+id/btn_testvolley_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="btn_testvolley_post" />

        <Button
            android:id="@+id/btn_testvolley_json"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="btn_testvolley_json" />

        <Button
            android:id="@+id/btn_testvolley_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="btn_testvolley_img" />

        <ImageView
            android:id="@+id/img_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
